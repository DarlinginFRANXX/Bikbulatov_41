<Page x:Class="Bikbulatov41.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bikbulatov41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage" FontFamily="Comic Sans MS">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Логин:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Name="LoginBox" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Height="40"/>

        <TextBlock Text="Пароль:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Name="PasswordBox" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Height="40"/>

        <!-- Капча - изначально скрыта -->
        <TextBlock Name="CaptchaLabel" Text="Капча:" Grid.Row="2" Grid.Column="0" 
                   VerticalAlignment="Center" FontSize="16" Visibility="Collapsed"/>

        <StackPanel Name="CaptchaPanel" Grid.Row="2" Grid.Column="1" Orientation="Horizontal" 
                    VerticalAlignment="Center" Visibility="Collapsed">
            <Border BorderBrush="Black" BorderThickness="1" Background="LightYellow" Padding="10">
                <TextBlock Name="CaptchaTextBlock" FontSize="24" FontWeight="Bold" 
                           Foreground="DarkBlue" FontFamily="Courier New"/>
            </Border>
            <Button Name="RefreshCaptchaButton" Content="🔄" Margin="10,0,0,0" 
                    Width="40" Height="40" Click="RefreshCaptchaButton_Click_1" 
                    ToolTip="Обновить капчу"/>
        </StackPanel>

        <!-- Ввод капчи - изначально скрыт -->
        <TextBlock Name="CaptchaInputLabel" Text="Введите капчу:" Grid.Row="3" Grid.Column="0" 
                   VerticalAlignment="Center" FontSize="16" Visibility="Collapsed"/>
        <TextBox Name="CaptchaInputBox" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" 
                 Height="40" FontSize="16" MaxLength="6" Visibility="Collapsed"/>

        <!-- Кнопки теперь на строке 4 (вместо строк 4 и 2) -->
        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="LoginButton" Content="Войти" Margin="0,0,20,0" 
                    Width="150" Height="40" Click="LoginButton_Click" FontSize="16"/>
            <Button Name="LoginHowGuestButton" Content="Войти как гость" 
                    Width="150" Height="40" Click="LoginHowGuestButton_Click" FontSize="16"/>
        </StackPanel>
    </Grid>
</Page>